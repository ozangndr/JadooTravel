@model JadooTravel.Dtos.PartnerDtos.CreatePartnerDto
@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <h4 class="fw-semibold mb-4 text-primary text-center">
                <i class="bi bi-people-fill"></i> Yeni Partner Ekle
            </h4>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Partner Adı</label>
                    <input asp-for="Title" class="form-control" placeholder="Partner adını giriniz" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                    <textarea asp-for="Description" rows="3" class="form-control" placeholder="Açıklama giriniz"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IconUrl" class="form-label fw-semibold">Görsel URL</label>
                    <input asp-for="IconUrl" type="url" class="form-control" placeholder="Görsel bağlantısı giriniz" />
                    <span asp-validation-for="IconUrl" class="text-danger small"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle"></i> Partneri Kaydet
                    </button>
                    <a href="/Partner/PartnerList" class="btn btn-secondary px-4 ms-2">
                        <i class="bi bi-arrow-left"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap ikonları -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />



