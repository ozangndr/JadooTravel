@model List<JadooTravel.Dtos.PartnerDtos.ResultPartnerDto>
@{
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                <h4 class="fw-semibold text-primary mb-0">
                    <i class="bi bi-people-fill"></i> Partner Listesi
                </h4>
                <a href="/Partner/CreatePartner/" class="btn btn-success fw-semibold">
                    <i class="bi bi-plus-circle me-1"></i> Yeni Partner Ekle
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-primary text-dark">
                            <tr>
                                <th>#</th>
                                <th>Partner Adı</th>
                                <th>Açıklama</th>
                                <th>Görsel</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td class="fw-semibold text-secondary">@count</td>
                                    <td class="fw-semibold">@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <img src="@item.IconUrl" alt="Partner Icon" class="rounded shadow-sm" style="width: 80px; height: 80px; object-fit: cover;" />
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="/Partner/UpdatePartner/@item.PartnerId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-pencil-square"></i> Güncelle
                                            </a>
                                            <a href="/Partner/DeletePartner/@item.PartnerId" class="btn btn-outline-danger btn-sm"
                                               onclick="return confirm('Bu partneri silmek istediğinize emin misiniz?');">
                                                <i class="bi bi-trash"></i> Sil
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center mt-4" role="alert">
                    <i class="bi bi-info-circle me-2"></i> Henüz eklenmiş bir partner bulunmuyor.
                </div>
            }
        </div>
    </div>
</div>
