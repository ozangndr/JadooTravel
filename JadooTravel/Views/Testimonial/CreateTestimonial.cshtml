@model JadooTravel.Dtos.TestimonialDtos.CreateTestimonialDto
@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient bg-primary text-white text-center p-3 rounded-top-4">
                    <h4 class="fw-semibold mb-0">
                        <i class="bi bi-chat-heart-fill"></i> Yeni Müşteri Yorumu Ekle
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="CreateTestimonial" method="post">
                        <div class="mb-3">
                            <label asp-for="NameSurname" class="form-label fw-semibold">
                                <i class="bi bi-person"></i> Ad Soyad
                            </label>
                            <input asp-for="NameSurname" class="form-control form-control-lg shadow-sm" placeholder="Ad Soyad Giriniz" />
                            <span asp-validation-for="NameSurname" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CityCountry" class="form-label fw-semibold">
                                <i class="bi bi-geo-alt"></i> Şehir / Ülke
                            </label>
                            <input asp-for="CityCountry" class="form-control form-control-lg shadow-sm" placeholder="Şehir ve Ülke Giriniz" />
                            <span asp-validation-for="CityCountry" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="bi bi-chat-dots"></i> Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="4" placeholder="Müşteri yorumunu giriniz..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageUrl" class="form-label fw-semibold">
                                <i class="bi bi-image"></i> Resim URL
                            </label>
                            <input asp-for="ImageUrl" class="form-control form-control-lg shadow-sm" placeholder="Müşteri fotoğrafı URL'sini giriniz..." />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm">
                                <i class="bi bi-check-circle"></i> Yorumu Ekle
                            </button>
                            <a href="/Testimonial/TestimonialList" class="btn btn-outline-secondary btn-lg px-5 ms-2 rounded-pill shadow-sm">
                                <i class="bi bi-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<style>
    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-4px);
        }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white !important;
    }
</style>

