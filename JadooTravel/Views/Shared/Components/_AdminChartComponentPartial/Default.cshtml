@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-lg-8 d-flex align-items-strech">
        <div class="card w-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-1">
                    <div class="">
                        <h5 class="card-title fw-semibold">Destinations Capacity</h5>
                    </div>
                    <div class="dropdown">
                        <button id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"
                                class="rounded-circle btn-transparent rounded-circle btn-sm px-1 btn shadow-none">
                            <i class="ti ti-dots-vertical fs-7 d-block"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </div>
                </div>

                <canvas id="profitChart" height="150"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Sağ taraf sabit içeriğin -->
        <div class="row">
            <div class="col-lg-12 col-sm-6">
                <div class="card overflow-hidden">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-10 fw-semibold">En Pahalı - En Ucuz Tur</h5>
                        <div class="row align-items-center">
                            <div class="col-7">
                                <h4 class="fw-semibold mb-3">@ViewBag.ExpensiveDestination.CityCountry : @ViewBag.ExpensiveDestination.Price ₺ </h4>
                                <br />
                                <h4 class="fw-semibold mb-3">@ViewBag.CheapDestination.CityCountry :  @ViewBag.CheapDestination.Price ₺ </h4>
                                
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-sm-6">
                <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
                    <div class="card-body p-4 d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="card-title mb-3 fw-semibold text-primary">En Yeni Tur</h4>
                            <p class="mb-1 text-muted">@ViewBag.LastDestination.CityCountry</p>
                            <p class="mb-1 fw-semibold">@ViewBag.LastDestination.Price ₺</p>
                            <p class="mb-1">@ViewBag.LastDestination.DayNight</p>
                            <p class="mb-0 text-secondary">@ViewBag.LastDestination.Capacity Kişi</p>
                        </div>
                        <div>
                            <img src="@ViewBag.LastDestination.ImageUrl"
                                 alt="Tur Görseli"
                                 width="140" height="140"
                                 style="object-fit: cover; border-radius: 12px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>




<div class="row">   
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Son Eklenen 5 Tur</h5>

                    <div class="dropdown">
                        <button id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"
                                class="rounded-circle btn-transparent rounded-circle btn-sm px-1 btn shadow-none">
                            <i class="ti ti-dots-vertical fs-7 d-block"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li>
                                <a class="dropdown-item" href="#">Another action</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">Tur</th>
                                <th scope="col">Gün / Gece</th>
                                <th scope="col">Kapasite</th>
                                <th scope="col">Fiyat</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.LastFiveDestination)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="me-4">
                                                <img src="@item.ImageUrl" width="50" class="rounded-circle"
                                                     alt="" />
                                            </div>

                                            <div>
                                                <h6 class="mb-1 fw-bolder">@item.CityCountry</h6>
                                                <p class="fs-3 mb-0">@item.Description</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="fs-3 fw-normal mb-0">@item.DayNight</p>
                                    </td>
                                    <td>
                                        <p class="fs-3 fw-normal mb-0 text-success">
                                            @item.Capacity
                                        </p>
                                    </td>
                                    <td>
                                        <span class="fs-3 fw-normal mb-0">@item.Price</span>
                                    </td>
                                </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    @foreach (var item in ViewBag.LastFourTestimonial)
    {
        <div class="col-sm-6 col-xl-3">
            <div class="card overflow-hidden">
                <div class="position-relative">
                    <a href="javascript:void(0)">
                        <img src="@item.ImageUrl"
                             class="card-img-top rounded-0" alt="...">
                    </a>
                    <a href="javascript:void(0)"
                       class="bg-primary rounded-circle p-2 text-white d-inline-flex position-absolute bottom-0 end-0 mb-n3 me-3"
                       data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Add To Cart">
                        <i class="ti ti-basket fs-4"></i>
                    </a>
                </div>
                <div class="card-body pt-3 p-4">
                    <h6 class="fw-semibold fs-4">@item.NameSurname</h6>
                    <div class="d-flex align-items-center justify-content-between">
                        <h6 class="fw-semibold fs-4 mb-0">
                            @item.Description
                        </h6>
                        
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>
<div class="py-6 px-6 text-center">
    <p class="mb-0 fs-4">
        Design and Developed by <a href="https://www.wrappixel.com/" target="_blank"
                                   class="pe-1 text-primary text-decoration-underline">wrappixel.com</a> Distributed by <a href="https://themewagon.com/">ThemeWagon</a>
    </p>
</div>






<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const destinations = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.DestinationsList));

    console.log(destinations); // kontrol için

    const labels = destinations.map(d => d.CityCountry);
    const capacities = destinations.map(d => d.Capacity);

    const ctx = document.getElementById('profitChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Capacity',
                data: capacities,
                backgroundColor: 'rgba(54, 162, 235, 0.6)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false },
                tooltip: { enabled: true }
            },
            scales: {
                x: {
                    title: { display: true, text: '' },
                    ticks: { autoSkip: false, maxRotation: 45, minRotation: 45 }
                },
                y: {
                    title: { display: true, text: 'Capacity' },
                    beginAtZero: true
                }
            }
        }
    });
</script>
