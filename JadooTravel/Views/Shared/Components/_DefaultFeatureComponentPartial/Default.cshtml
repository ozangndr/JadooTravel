@using JadooTravel.App_GlobalResources
@*
    Feature Component
*@



<!-- Bootstrap 5 CSS ( head kısmında varsa gerek yoktur; yoksa ekleyin) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Sadeleştirilmiş bölüm -->
<section style="padding-top: 7rem;">
    <div class="bg-holder" style="background-image:url(/public/assets/img/hero/hero-bg.svg);"></div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5 col-lg-6 order-0 order-md-1 text-end">
                <img class="pt-7 pt-md-0 hero-img" src="/public/assets/img/hero/hero-img.png" alt="hero-header" />
            </div>

            <div class="col-md-7 col-lg-6 text-md-start text-center py-6">
                <h4 class="fw-bold text-danger mb-3">@Texts.MainTitle1</h4>
                <h1 class="hero-title">@Texts.MainTitle2</h1>
                <p class="mb-4 fw-medium">
                    @Texts.MainDescription
                </p>

                <div class="text-center text-md-start">
                    <a class="btn btn-primary btn-lg me-md-4 mb-3 mb-md-0 border-0 primary-btn-shadow" href="#!" role="button">@Texts.MoreInformation</a>

                    <!-- Tetikleyici: sadece modal açar, YouTube URL'sine yönlendirme yok -->
                    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

                    <a href="#!" role="button" data-bs-toggle="modal" data-bs-target="#popupVideo" class="btn btn-danger rounded-circle p-3 shadow">
                        <i class="fas fa-play fs-4"></i>
                    </a>
                    <span class="fw-medium ms-2">@Texts.play</span>
                    <!-- Modal -->
                    <div class="modal fade" id="popupVideo" tabindex="-1" aria-labelledby="popupVideoLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                <div class="modal-body p-0">
                                    <div class="ratio ratio-16x9">
                                        <iframe id="videoIframe"
                                                src=""
                                                title="YouTube video player"
                                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                allowfullscreen></iframe>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <!-- Kapat butonu -->
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <script>
                        const popupVideo = document.getElementById('popupVideo');
                        const videoIframe = document.getElementById('videoIframe');
                        const videoUrl = "https://www.youtube.com/embed/YzRQJRbFMD0?autoplay=1";

                        // Modal açıldığında video başlasın
                        popupVideo.addEventListener('shown.bs.modal', () => {
                          videoIframe.src = videoUrl;
                        });

                        // Modal kapatıldığında (ister X tuşu, ister kapat butonu, ister dışarı tıklama)
                        popupVideo.addEventListener('hidden.bs.modal', () => {
                          videoIframe.src = "";
                        });
                    </script>

                    <!-- /Modal -->

                </div>
            </div>
        </div>
    </div>
</section>

<!-- Bootstrap 5 JS (body sonunda) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
