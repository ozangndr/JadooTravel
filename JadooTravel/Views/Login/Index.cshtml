@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #74ABE2, #5563DE);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        padding: 2rem 3rem;
        width: 100%;
        max-width: 420px;
        transition: all 0.3s ease;
    }

        .login-container:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
        }

        .login-container h2 {
            font-weight: 600;
            color: #333;
            text-align: center;
            margin-bottom: 1.5rem;
        }

    .form-control {
        border-radius: 10px;
        margin-bottom: 1rem;
        padding: 0.75rem 1rem;
        border: 1px solid #ddd;
    }

    .btn-primary, .btn-success, .btn-secondary {
        border-radius: 10px;
        width: 100%;
        padding: 0.75rem;
        font-weight: 500;
    }

    .separator {
        text-align: center;
        margin: 1.5rem 0;
        color: #aaa;
        position: relative;
    }

        .separator::before,
        .separator::after {
            content: "";
            position: absolute;
            width: 40%;
            height: 1px;
            background: #ddd;
            top: 50%;
        }

        .separator::before {
            left: 0;
        }

        .separator::after {
            right: 0;
        }

    .message {
        text-align: center;
        color: red;
        margin-top: 1rem;
        font-weight: 500;
    }

    .back-btn {
        margin-top: 20px;
    }
</style>

<div class="login-container">
    <h2>Giriş Yap</h2>

    <form method="post" action="/Login/Index">
        <input type="text" name="username" class="form-control" placeholder="Kullanıcı Adı" required />
        <input type="password" name="password" class="form-control" placeholder="Şifre" required />
        <button type="submit" class="btn btn-primary">Giriş</button>
    </form>

    <div class="separator">veya</div>

    <form method="post" action="/Login/Register">
        <input type="text" name="username" class="form-control" placeholder="Yeni Kullanıcı Adı" required />
        <input type="password" name="password" class="form-control" placeholder="Yeni Şifre" required />
        <button type="submit" class="btn btn-success">Kayıt Ol</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <p class="message">@ViewBag.Message</p>
    }

    <div class="back-btn">
        <a href="/Default/Index" class="btn btn-secondary">← Geri Dön</a>
    </div>
</div>
